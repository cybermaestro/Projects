extends layouts/default
include helpers/mixins

block variables
	- const title = "watch-website"

	mixin card(images, text, price)
		.card__img 
			img.hours-img(src= images, alt="hours")
			h3.card__subtitle: a.card-link.link-w(href='#')= text
			p.price: a.card-link.link-w.text_price(href='#')= price

block content
	header.header__band
		.container
			.header__top
				.header__top_left
					.telephone__logo.logo_press: img(src="img/svg/telephone.svg", alt="telephone")
					p.toptext_left 8(812)123-45-67 | Работаем 7 дней в неделю | 9:00-18:00
				.header__top_right
					.exit__logo.logo_press: img(src="img/svg/exit.svg", alt="exit")
					p.toptext_right: a.link-g.entrance(href='#') Войти/Регистрация					
			
			.navbar
				.logo: a.logo__title.link-w(href='/') PORTER
				.menu-burger__header
					span
					nav.header__nav
						each t in ['Понравилось', 'личный кабинет', 'настройки']
							a.navbar__item.navbar__text.link-w(href='#')=t
						.navbar__shopping: a.shopping-link.logo_press(href='#')
							img(src="img/svg/bx_bx-cart.svg", alt="bx-cart")
						.navbar__search: a.search-link.logo_press(href='#')
							img(src="img/svg/poisk.svg", alt="poisk")
	
	.title
